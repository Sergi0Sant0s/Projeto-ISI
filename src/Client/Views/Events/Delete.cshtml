@model Client.Models.Event

@{
    ViewData["Title"] = "Eliminar Competição";
}

<h1>Eliminar Competição</h1>

<h3>Tem certeza que deseja eliminar esta competição?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome da Competição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class = "col-sm-2">
            Data de Inicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfStart)
        </dd>
        <dt class = "col-sm-2">
            Data de Fim
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfEnd)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="EventId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Voltar para a listagem</a>
    </form>
</div>
