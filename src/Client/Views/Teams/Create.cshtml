@model Client.Models.Team

@{
    ViewData["Title"] = "Equipas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Cria uma nova equipa</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nome da Equipa</label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ranking da Equipa</label>
                <input asp-for="TeamRanking" class="form-control" />
                <span asp-validation-for="TeamRanking" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nacionalidade</label>
                <input asp-for="TeamNationality" class="form-control" />
                <span asp-validation-for="TeamNationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar nova equipa" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar para a listagem</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
