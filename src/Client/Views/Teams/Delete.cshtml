@model Client.Models.Team

@{
    ViewData["Title"] = "Eliminar Equipa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar Equipa</h1>

<h3>Tem certeza que deseja eliminar esta equipa?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome da Equipa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
        <dt class="col-sm-2">
            Ranking da Equipa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeamRanking)
        </dd>
        <dt class="col-sm-2">
            Nacionalidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeamNationality)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TeamId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-info">Voltar para a listagem</a>
    </form>
</div>
