@model Client.Models.Game

@{
    ViewData["Title"] = "Editar Jogo";
    int id = ViewBag.Event.EventId;
}

<h1>Editar Jogo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="EventId"/>
            <input type="hidden" asp-for="GameId"/>
            <div class="form-group">
                <label class="control-label">Data</label>
                <input asp-for="GameDate" class="form-control" />
                <span asp-validation-for="GameDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Equipa A</label>
                <input type="hidden" asp-for="TeamAId"/>
                <input id="TeamA" class="form-control" disabled  value="@Model.TeamA.TeamName"/>
            </div>
            <div class="form-group">
                <label class="control-label">Equipa B</label>
                <input type="hidden" asp-for="TeamBId" />
                <input id="TeamA" class="form-control" disabled value="@Model.TeamB.TeamName" />
            </div>
            <div class="form-group">
                <label class="control-label">Equipa Vencedora</label>
                <select id="TeamWinner" asp-for="TeamWinnerId"  class="form-control" asp-items="@ViewBag.TeamsWinner">
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar Jogo" class="btn btn-success"/>
                <a asp-action="Index" asp-route-id="@ViewBag.Event.EventId" class="btn btn-danger">Descartar Dados</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
