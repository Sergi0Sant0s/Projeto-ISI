@model Client.Models.Game

@{
    ViewData["Title"] = "Eliminar Competição";
}

<h1>Eliminar Competição</h1>

<h3>Tem certeza que deseja eliminar esta competição?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GameDate)
        </dd>
        <dt class="col-sm-2">
            Team A
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamA.TeamName)
        </dd>
        <dt class="col-sm-2">
            Team B
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamB.TeamName)
        </dd>
        <dt class="col-sm-2">
            Team Vencedora
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeamWinner.TeamName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="GameId"/>
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" asp-route-id="EventId" class="btn btn-info">Voltar para a listagem</a>
    </form>
</div>
