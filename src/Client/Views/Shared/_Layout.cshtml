<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CS : GO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" asp-action="Index" asp-controller="Events"><img src="~/img/logo.jpg" width="250vh" style="color:white" /></a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="Index">Competições</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="Create">Equipas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Jogadores</a>
                    </li>
                    @if (Program.Token != null)
                    {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Parametrização
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" asp-controller="Events" asp-action="Index">Competições</a>
                    <a class="dropdown-item" asp-controller="Games" asp-action="Index">Jogos</a>
                    <a class="dropdown-item" asp-controller="Maps" asp-action="Index">Mapas</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-controller="Teams" asp-action="Index">Equipas</a>
                    <a class="dropdown-item" asp-controller="Players" asp-action="Index">Jogadores</a>

                    @if (Program.Token != null && Program.Token.Role == "Admin")
                    {
                <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Users" asp-action="Index">Utilizadores</a>}
                </div>
            </li>}
                </ul>
                <!--<form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>-->
                @if (Program.Token == null)
                {
            <a class="btn btn-primary my-2 my-sm-0" type="button" asp-controller="Home" asp-action="Login">Iniciar Sessão</a> }
        else
        {
            <a class="btn btn-danger my-2 my-sm-0" type="button" asp-controller="Login" asp-action="Logout">Logout</a>}
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Footer
            CS : GO -> Client
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
