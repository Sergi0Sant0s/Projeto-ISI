@{

}
<style>
    tr,h4{
        text-align:center;
    }
</style>
<hr />
<h4>Jogadores</h4>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Nickname
            </th>
            <th>
                Idade
            </th>
            <th>
                Nacionalidade
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Player item in ViewBag.Players)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nationality)
            </td>
        </tr>
        }
    </tbody>
</table>