@{
}
<style>
    tr,h4{
        text-align:center;
    }
</style>

<hr />
<h4>Competições</h4>
<hr />


<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Data de Inicio
            </th>
            <th>
                Data de Fim
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Event item in ViewBag.Events)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfEnd)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Games" asp-route-id="@item.EventId">Jogos</a>
                    <a class="btn btn-primary" asp-action="TeamsEvent" asp-route-id="@item.EventId">Equipas</a>
                </td>
            </tr>
        }
    </tbody>
</table>