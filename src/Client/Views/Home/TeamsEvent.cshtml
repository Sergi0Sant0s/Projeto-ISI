@{
    int id = ViewBag.Event.EventId;
}


<div class="container">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <h5>Nome do Evento</h5>
            <p>@ViewBag.Event.EventName</p>
        </div>
        <div class="col-md-4">
            <h5>Data de Inicio</h5>
            <p>@ViewBag.Event.DateOfStart</p>
        </div>
        <div class="col-md-4">
            <h5>Data de Fim</h5>
            <p>@ViewBag.Event.DateOfEnd</p>
        </div>
        <hr />
    </div>
    <hr />
    <h1>Equipas da Competição</h1>
    <hr />
    <div class="row" style="margin-top:1vh">
        <div class="col-md-8">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Nome da Equipa
                        </th>
                        <th>
                            Ranking da Equipa
                        </th>
                        <th>
                            Nacionalidade
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Team item in ViewBag.Event.Teams)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TeamName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TeamRanking)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TeamNationality)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="Events" class="btn btn-primary">Voltar a listagem de competições</a>
        </div>
    </div>

</div>
