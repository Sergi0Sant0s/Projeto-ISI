@{
}


<div class="container">
    <div class="row">
        <div class="col-md-4">
            <h5>Nome do Evento</h5>
            <p>@ViewBag.Event.EventName</p>
        </div>
        <div class="col-md-4">
            <h5>Data de Inicio</h5>
            <p>@ViewBag.Event.DateOfStart</p>
        </div>
        <div class="col-md-4">
            <h5>Data de Fim</h5>
            <p>@ViewBag.Event.DateOfEnd</p>
        </div>
    </div>
    <hr />
    <h1>Jogos</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Data do Jogo
                        </th>
                        <th>
                            Equipa A
                        </th>
                        <th>
                            Equipa B
                        </th>
                        <th>
                            Equipa Vencedora
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.Games)
                    {
                        <tr>
                            <td>
                                @item.GameDate
                            </td>
                            <td>
                                @item.TeamA.TeamName
                            </td>
                            <td>
                                @item.TeamB.TeamName
                            </td>
                            <td>
                                @if (@item.TeamWinner != null)
                                {
                                    @item.TeamWinner.TeamName;
                                }
                            </td>
                            <td>
                                <a asp-action="Stats" asp-route-id="@item.GameId" class="btn btn-primary">Estatisticas</a>
                                <a asp-action="MapOfGame" asp-route-id="@item.GameId" class="btn btn-primary">Mapas</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="Events" class="btn btn-primary">Voltar a listagem de competições</a>
        </div>
    </div>
</div>